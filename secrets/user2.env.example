# user2.env — Complete configuration for user2 account (DO NOT COMMIT)
# Copy this file to user2.env and replace dummy values below before running!

# =============================================================================
# ACCOUNT IDENTIFICATION
# =============================================================================
# Unique identifier for this account (used in logs and lockfiles)
ACCOUNT_ID=user2

# =============================================================================
# EMAIL ACCOUNT SETTINGS
# =============================================================================
# Email address for the WEB.DE account to keep alive
ACCOUNT_EMAIL=other@example.com

# IMAP server settings for login attempts
ACCOUNT_IMAP_HOST=imap.web.de
ACCOUNT_IMAP_PORT=993
ACCOUNT_IMAP_TIMEOUT=30

# =============================================================================
# RETRY CONFIGURATION
# =============================================================================
# Retry settings for failed IMAP/SMTP operations
ACCOUNT_RETRY_MAX=5
ACCOUNT_RETRY_BASE=5.0
ACCOUNT_RETRY_MAX_WAIT=120.0
ACCOUNT_JITTER=0.5

# =============================================================================
# SECRETS (REPLACE WITH REAL VALUES!)
# =============================================================================
# Display name for email sender
ACCOUNT_FROM_NAME=Projekt Bot

# SMTP credentials (used for both SMTP and IMAP authentication)
ACCOUNT_SMTP_USER=other@example.com
ACCOUNT_SMTP_PASS=replace_with_strong_password

# =============================================================================
# EMAIL NOTIFICATION SETTINGS
# =============================================================================
# Whether to send email notifications after each run
MAIL_SEND=true

# SMTP server settings for sending notifications
MAIL_SMTP_HOST=smtp.web.de
MAIL_SMTP_PORT=587
MAIL_SMTP_USE_TLS=true

# Email notification recipient
MAIL_TO_EMAIL=other@example.com

# =============================================================================
# EMAIL TEMPLATE CONFIGURATION
# =============================================================================
# Email subject template (variables: {status}, {time}, {email})
TEMPLATE_SUBJECT=WEB.DE KeepAlive [{status}] {time} — {email}

# Email body template (variables: {status}, {time}, {email}, {message}, {log_excerpt})
TEMPLATE_BODY=Hallo,\n\ndies ist der automatische KeepAlive-Report.\n\nAccount: {email}\nZeit: {time}\nStatus: {status}\nNachricht: {message}\n\nLetzte Logzeilen:\n{log_excerpt}\n\nViele Grüße

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log file directory (relative to script location)
LOG_DIR=logs

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# LOCKFILE CONFIGURATION
# =============================================================================
# Prevent multiple script instances for the same account
LOCK_USE=true
LOCK_DIR=logs